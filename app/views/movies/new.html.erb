<%= provide(:title, "Tambah Movie") %>
<div class="container">   
	<% if !@movie.errors.empty? %>   
	   <div>   
	         
	      <ul>   
	         <% @movie.errors.full_messages.each do |msg| %>   
	            <li><%= msg %></li>   
	         <% end %>      </ul>   
	         
	   </div>   
	<% end %>
	  
	<div class="card p-4 m-4">   
	   <%= form_for @movie, html: { multipart: true } do |f| %> 
		   	<div class="form-group">  
		      <label>Title</label> 
		      <%= f.text_field :title, :class => "form-control", required: true %>
			</div>
		    <div class="form-group">
		      <label>Serial Film</label>   
		      <%= f.text_field :serial_film, :class => "form-control", required: true %>   
		    </div>
		    <div class="form-group">
		      <label>Bahasa</label> 
		      <%= f.text_field :bahasa, :class => "form-control", required: true %>   
		    </div>
		    <div class="form-group">
		      <label>Sutradara</label> 
		      <%= f.text_field :sutradara, :class => "form-control" %>   
		    </div>
		    <div class="form-group"> 	       
		      <label>Durasi</label> 
		      <%= f.text_field :durasi, :class => "form-control", required: true %>   
		    </div>  
		    <div class="form-group"> 	       
		      <label>Sinposis</label> 
		      <%= f.text_area :sinopsis, :class => "form-control", required: true %>   
		    </div>  
		    <div class="form-group"> 	       
		      <label>Tanggal Rilis</label> 
		      <%= f.text_field :tanggal_rilis, :class => "form-control", required: true %>   
		    </div>  
		    <div class="form-group"> 	       
		      <label>Link Movie</label> 
		      <%= f.text_field :link_movie, :class => "form-control", required: true %>   
		    </div>  	       
		    <div class="form-group"> 	       
		      <label>Gambar Movie</label> 
		      <%= f.file_field :gambar_movie, :class => "form-control-file border", required: true %>   
		    </div>  
		      <%= f.submit "Save", :class => "btn btn-primary" %>   
	   		</div>
	   <% end %>   
	</div>   
</div>  